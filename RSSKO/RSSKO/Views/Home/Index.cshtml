@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Link</th>
                    <th>Description</th>
                    <th>Publish Date</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.RssFeed != null)
                {
                    foreach (var item in ViewBag.RssFeed)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td><a href="@item.Link" target="_blank">@item.Link</a></td>
                            <td>@item.Description</td>
                            <td>@item.PubDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>